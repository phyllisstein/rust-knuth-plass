{
    "compilerOptions": {
        "module": "NodeNext",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "incremental": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2020",
            "ESNext",
            "DOM"
        ],
        "noEmit": true,
        "checkJs": false
    },
    "typeAcquisition": {
        "enable": true
    }
}
